
<% if current_user %>
  <div class="one wide column"></div>

  <div class="four wide column">
    <div class="organise">
      <%= button_tag "Organise your own Expedition", id: "organiseExpedition" %>
      <%= render 'expeditions/create' %>
    </div>
    <div id="mostRecent">
      <h2>Most Recent</h2>
      <% @most_recent.each do |expedition| %>
        <div class="sideExped">
          <p><%= link_to "#{expedition.name}", expedition_path(expedition) %></p>
          <p>Organised by <%= link_to "#{expedition.creator.username}", user_profile_path(expedition.creator) %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="eleven wide column">
    <% @expedition_activities.each do |activity| %>
      <div class="activity">
        <p><%= link_to "#{activity.user.username}", user_profile_path(activity.user) %> <%= activity.action %> <%= link_to "#{activity.subject.name}", expedition_path(activity.subject) %></p>
        <%= render 'profiles/expedition', expedition: activity.subject %>
      </div>
    <% end %>
  </div>



<% else %>

  <div class="one wide column"></div>

  <div class="fourteen wide column">
    <div id="mostRecent">
      <% @most_recent.each do |expedition| %>
        <div class="sideExped">
          <p><%= link_to "#{expedition.name}", expedition_path(expedition) %></p>
          <p>Organised by <%= link_to "#{expedition.creator.username}", user_profile_path(expedition.creator) %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="one wide column"></div>
<% end %>

<%= javascript_include_tag 'expeditions' %>

