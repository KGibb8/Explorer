<!DOCTYPE html>
<html>
  <head>
    <title>Explorer</title>
    <%= csrf_meta_tags %>
    <%= semantic_flash %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="ui grid">
      <nav>
        <div class="ui inverted segment">
          <div class="ui inverted secondary pointing menu">
            <% if user_signed_in?%>
              <%= link_to "Profile", user_profile_path(current_user), class: "item" %>
              <%= link_to "Expeditions", expeditions_path, class: "item" %>
              <%= link_to "Friends", class: "item" %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "item" %>
            <% else %>
              <%= link_to "Log In", new_user_session_path, class: "item" %>
            <% end %>
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
